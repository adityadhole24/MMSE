<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/cardview_dark_background"
    tools:context=".R">

    <TextView
        android:id="@+id/quesNo1"
        android:layout_width="102dp"
        android:layout_height="32dp"
        android:layout_marginBottom="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:text="END"
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:visibility="visible"
        android:background="@drawable/rounded_corner"
        app:layout_constraintBottom_toTopOf="@+id/quesText1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.033"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.47" />

    <TextView
        android:id="@+id/quesText1"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="17dp"
        android:background="@drawable/rounded_corner"
        android:text="Thank You for taking this Test. Since this is a Standardized MMSE Test, you have been graded for a total of 30 Points. Your Total Score and our Conclusions are listed below."
        android:gravity="center"
        android:textAppearance="@android:style/TextAppearance.Material.DialogWindowTitle"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/quesNo1" />


    <Button
        android:id="@+id/save"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="136dp"
        android:layout_marginStart="135dp"
        android:background="@drawable/rounded_corner"
        android:text="@string/save"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/mkslabel"
        android:layout_width="84dp"
        android:layout_height="36dp"
        android:layout_marginBottom="13dp"
        android:layout_marginEnd="55dp"
        android:layout_marginStart="94dp"
        android:background="@drawable/rounded_corner"
        android:text="Marks"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label1"
        app:layout_constraintEnd_toStartOf="@+id/marks"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/marks"
        android:layout_width="86dp"
        android:layout_height="36dp"

        android:layout_marginBottom="13dp"
        android:layout_marginEnd="92dp"
        android:background="@drawable/rounded_corner"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label1"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/label1"
        android:layout_width="357dp"
        android:layout_height="46dp"

        android:layout_marginBottom="11dp"
        android:layout_marginEnd="33dp"
        android:layout_marginStart="21dp"
        android:background="@drawable/rounded_corner"
        android:text="1) Conclusion on severity of Cognitive impairment"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/con1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/con1"
        android:layout_width="174dp"
        android:layout_height="46dp"

        android:layout_marginBottom="22dp"

        android:layout_marginEnd="127dp"
        android:layout_marginStart="110dp"
        android:background="@drawable/rounded_corner"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/label2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/label2"
        android:layout_width="343dp"
        android:layout_height="50dp"


        android:layout_marginBottom="22dp"

        android:layout_marginEnd="38dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/rounded_corner"
        android:text="2) Conclusion on Result with respect to Education level"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/con2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/con2"
        android:layout_width="329dp"
        android:layout_height="61dp"


        android:layout_marginBottom="15dp"
        android:layout_marginEnd="52dp"
        android:layout_marginStart="30dp"
        android:background="@drawable/rounded_corner"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>